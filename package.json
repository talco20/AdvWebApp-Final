{
  "name": "news-search-app",
  "version": "1.0.0",
  "description": "News Search Application - Final Project",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --silent",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop news-search-app",
    "pm2:restart": "pm2 restart news-search-app",
    "pm2:reload": "pm2 reload news-search-app",
    "pm2:delete": "pm2 delete news-search-app",
    "pm2:logs": "pm2 logs news-search-app",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "news",
    "social-media",
    "ai-search"
  ],
  "author": "Tal Cohen",
  "license": "ISC",
